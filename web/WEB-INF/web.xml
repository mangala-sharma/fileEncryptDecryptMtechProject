<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.thesis.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.thesis.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.thesis.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpServlet</servlet-name>
        <servlet-class>com.thesis.servlets.UpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AesEncryption</servlet-name>
        <servlet-class>com.thesis.servlets.AesEncryption</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownServlet</servlet-name>
        <servlet-class>com.thesis.servlets.DownServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UplServlet</servlet-name>
        <servlet-class>com.thesis.servlets.UplServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpServlet</servlet-name>
        <url-pattern>/UpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AesEncryption</servlet-name>
        <url-pattern>/AesEncryption</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownServlet</servlet-name>
        <url-pattern>/DownServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UplServlet</servlet-name>
        <url-pattern>/UplServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
